<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="top.jiuxialb.javafx.fx.controller.FormController" spacing="20" alignment="CENTER" prefHeight="600" prefWidth="800">
    <padding>
        <Insets top="30" right="30" bottom="30" left="30" />
    </padding>
    
    <children>
        <!-- 登录注册标题 -->
        <Label fx:id="formTitleLabel" text="用户登录" styleClass="navbar-brand" />
        
        <!-- 登录表单 -->
        <GridPane fx:id="loginForm" hgap="10" vgap="15">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="120" />
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>
            
            <Label text="邮箱:*" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="label" />
            <TextField fx:id="emailField" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="form-control" promptText="请输入邮箱地址" />
            
            <Label text="密码:*" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="label" />
            <PasswordField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="form-control" promptText="请输入密码" />
        </GridPane>
        
        <!-- 注册表单（默认隐藏） -->
        <GridPane fx:id="registerForm" hgap="10" vgap="15" visible="false">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="120" />
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>
            
            <Label text="姓名:*" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="label" />
            <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="form-control" promptText="请输入姓名" />
            
            <Label text="邮箱:*" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="label" />
            <TextField fx:id="registerEmailField" GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="form-control" promptText="请输入邮箱地址" />
            
            <Label text="密码:*" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="label" />
            <PasswordField fx:id="registerPasswordField" GridPane.rowIndex="2" GridPane.columnIndex="1" styleClass="form-control" promptText="请输入密码" />
            
            <Label text="确认密码:*" GridPane.rowIndex="3" GridPane.columnIndex="0" styleClass="label" />
            <PasswordField fx:id="confirmPasswordField" GridPane.rowIndex="3" GridPane.columnIndex="1" styleClass="form-control" promptText="请再次输入密码" />
            
            <Label text="年龄:" GridPane.rowIndex="4" GridPane.columnIndex="0" styleClass="label" />
            <Spinner fx:id="ageSpinner" GridPane.rowIndex="4" GridPane.columnIndex="1" styleClass="spinner" />
        </GridPane>
        
        <!-- 表单操作按钮 -->
        <HBox spacing="20" alignment="CENTER">
            <children>
                <Button fx:id="switchFormButton" text="切换到注册" onAction="#handleSwitchForm" styleClass="btn-secondary" />
                <Button fx:id="submitFormButton" text="登录" onAction="#handleSubmitForm" styleClass="btn-primary" />
            </children>
        </HBox>
        
        <!-- 状态标签 -->
        <Label fx:id="statusLabel" text="欢迎使用本系统" styleClass="label-secondary" />
    </children>
</VBox>