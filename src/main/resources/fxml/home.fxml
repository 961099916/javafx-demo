<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="top.jiuxialb.javafx.fx.controller.HomeController" spacing="20" alignment="CENTER" prefHeight="600" prefWidth="800">
    <padding>
        <Insets top="30" right="30" bottom="30" left="30" />
    </padding>
    
    <children>
        <!-- 首页标题 -->
        <Label fx:id="welcomeLabel" text="欢迎来到首页" styleClass="navbar-brand" />
        
        <!-- 用户信息面板 -->
        <TitledPane text="用户信息" expanded="true" styleClass="titled-pane">
            <content>
                <GridPane hgap="10" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" minWidth="120" />
                        <ColumnConstraints hgrow="ALWAYS" />
                    </columnConstraints>
                    
                    <Label text="姓名:" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="label" />
                    <Label fx:id="nameLabel" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="label" />
                    
                    <Label text="邮箱:" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="label" />
                    <Label fx:id="emailLabel" GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="label" />
                    
                    <Label text="年龄:" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="label" />
                    <Label fx:id="ageLabel" GridPane.rowIndex="2" GridPane.columnIndex="1" styleClass="label" />
                </GridPane>
            </content>
        </TitledPane>
        
        <!-- 功能按钮 -->
        <HBox spacing="20" alignment="CENTER">
            <children>
                <Button text="刷新信息" onAction="#handleRefresh" styleClass="btn-primary" />
                <Button text="退出登录" onAction="#handleLogout" styleClass="btn-secondary" />
            </children>
        </HBox>
        
        <!-- 状态标签 -->
        <Label fx:id="statusLabel" text="就绪" styleClass="label-secondary" />
    </children>
</VBox>